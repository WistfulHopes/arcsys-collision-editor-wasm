    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'arcsys-collision-editor-wasm'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=arcsys-collision-editor-wasm"
                ],
                "filter": {
                    "name": "arcsys-collision-editor-wasm",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'arcsys-collision-editor-wasm'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=arcsys-collision-editor-wasm",
                    "--package=arcsys-collision-editor-wasm"
                ],
                "filter": {
                    "name": "arcsys-collision-editor-wasm",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "CARGO_MANIFEST_DIR": "${workspaceFolder}",
            }        
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'arcsys-collision-editor-wasm'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=arcsys-collision-editor-wasm",
                    "--package=arcsys-collision-editor-wasm"
                ],
                "filter": {
                    "name": "arcsys-collision-editor-wasm",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'web'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=web",
                    "--package=arcsys-collision-editor-wasm"
                ],
                "filter": {
                    "name": "web",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}